@model WeatherApp.Models.WeatherResponse

@{
    ViewData["Title"] = "Home";
}

<div class="container mt-10">
    <h1>Your Weather, Your Way</h1>
</div>

<div class="container card mt-10">
    <form id="weatherForm" method="post" asp-action="GetWeather" asp-controller="Weather" asp-antiforgery="true">
        <input id="locationInput" type="text" name="location" placeholder="Enter location" required />
        <input type="hidden" id="regionInput" name="region" />
        <input type="hidden" id="countryInput" name="country" />
        <div>
            <label for="unitToggle" class="flex justify-center items-center cursor-pointer mt-5 mb-2 sm:mb-3">
                <div class="relative">
                    <input type="checkbox" id="unitToggle" name="isCelsius" value="true" class="sr-only" checked />
                    <div class="w-10 sm:w-12 h-4 sm:h-6 bg-gray-200 rounded-full shadow-inner"></div>
                    <div class="dot absolute w-6 sm:w-8 h-6 sm:h-8 bg-[#fefefe] rounded-full shadow hover:shadow-lg duration-100 ease-in-out -left-1 -top-1 transition"></div>
                </div>
                <div class="ml-3 sm:ml-5 ">
                    <span id="unitLabel">Celsius</span>
                </div>
            </label>
        </div>
        <button type="submit">Submit</button>
    </form>
</div>

<div class="container card hidden" id="weatherDetailsCard">
    <div id="weatherDetails"></div>
    <button id="refreshButton">Refresh</button>
</div>

<div id="spinner" class="hidden">
    <svg aria-hidden="true" class="inline w-12 h-12 text-white-200 animate-spin dark:text-gray-300 fill-[#45b5de]" viewBox="0 0 100 101" fill="none" xmlns="http://www.w3.org/2000/svg">
